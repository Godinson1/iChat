{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist/",
    "rootDir": "./base",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "include": ["base/**/*.ts", "base/server.ts"],
  "exclude": ["node_modules", "typings"]
}
